<h1>New Product</h1>
<form method="POST" action="/shop/admin" enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <label>Title <input name="title" required></label><br/>
  <label>Slug <input name="slug" required></label><br/>
  <label>Price (cents) <input name="priceCents" type="number" min="0" required></label><br/>
  <label>Stock <input name="stock" type="number" min="0" value="0"></label><br/>
  <label>Image <input type="file" name="image" accept="image/*"></label><br/>
  <label>Description<br/><textarea name="description" rows="6"></textarea></label><br/>
  <button type="submit">Create</button>
</form>
