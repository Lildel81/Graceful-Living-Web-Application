<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Resource Image</title>
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/carousel-mangement.css">
</head>
<body>
  <h2>Edit Resource Image</h2>

  <form action="/adminportal/resources/<%= resource._id %>/update" method="POST" enctype="multipart/form-data">
    <div class="form-section">
      <label>Current Image:</label><br>
      <img src="<%= resource.imageUrl %>" class="slide-img" alt="Current Resource Image">
    </div>

    <!-- text fields always editable -->
    <div class="form-section">
      <label for="overlayText">Overlay Text:</label>
      <input type="text" name="overlayText" id="overlayText" value="<%= resource.overlayText || '' %>">

      <label for="buttonText">Button Text:</label>
      <input type="text" name="buttonText" id="buttonText" value="<%= resource.buttonText || '' %>">

      <label for="buttonUrl">Button URL:</label>
      <input type="text" name="buttonUrl" id="buttonUrl" value="<%= resource.buttonUrl || '' %>">
    </div>

    <!-- make image change optional -->
    <div class="form-section">
      <label>Change Image (optional):</label><br>

      <!-- radio buttons are optional now -->
      <label><input type="radio" name="imageOption" value="upload"> Upload New</label>
      <input type="file" name="imageUpload" id="imageUpload">

      <br>

      <label><input type="radio" name="imageOption" value="url"> Replace with URL</label>
      <input type="text" name="imageUrl" id="imageUrl" placeholder="Paste new image URL">
    </div>

    <button type="submit">Save Changes</button>
  </form>

  <a href="/adminportal/resourcesmanagement"><button>â¬… Back</button></a>
</body>
</html>

