  <!-- Q&A Section with Staggered Layout -->
  <section style="padding: 60px 20px; max-width: 1100px; margin: auto; font-family: sans-serif;">

    <% if (contentBlocks.length === 0) { %>
      <p>No About Us content has been added yet.</p>
    <% } %>

    <% contentBlocks.forEach((block, i) => { %>

      <% if (i % 2 === 0) { %>
        <!-- Block (Text Left, Image Right) -->
        <div style="display: flex; flex-wrap: wrap; align-items: center; margin-bottom: 60px;">
          
          <div style="flex: 1; min-width: 300px;">
            <h3 style="font-size: 22px; font-weight: bold;"><%= block.title %></h3>
            <p style="margin-top: 10px; color: #444;"><%= block.description %></p>
          </div>

          <div style="flex: 1; min-width: 300px; text-align: center;">
            <img 
              src="<%= block.imageUrl %>" 
              alt="Block Image"
              style="width: 100%; max-width: 400px; height: auto; border-radius: 12px;" 
            />
          </div>
        </div>

      <% } else { %>

        <!-- Block (Image Left, Text Right) -->
        <div style="display: flex; flex-wrap: wrap-reverse; align-items: center; margin-bottom: 60px;">
          
          <div style="flex: 1; min-width: 300px; text-align: center;">
            <img 
              src="<%= block.imageUrl %>" 
              alt="Block Image"
              style="width: 100%; max-width: 400px; height: auto; border-radius: 12px;" 
            />
          </div>

          <div style="flex: 1; min-width: 300px;">
            <h3 style="font-size: 22px; font-weight: bold;"><%= block.title %></h3>
            <p style="margin-top: 10px; color: #444;"><%= block.description %></p>
          </div>

        </div>

      <% } %>

    <% }) %>

  </section>
  