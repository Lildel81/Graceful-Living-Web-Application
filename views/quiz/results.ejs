<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Graceful Living Results</title>

  <link rel="stylesheet" href="/css/results.css">
</head>

<body>
  <header>
    <h1>Your Chakra & Archetype Insights</h1>
  </header>

  <main>
    <!-- chakra Section -->
    <section id="chakra-section">
      <h2><%= chakraData.title || "Chakra Insights" %></h2>
      <% chakraData.description.forEach(paragraph => { %>
        <p><%= paragraph %></p>
      <% }) %>

      <h3>Bija Mantra</h3>
      <p><%= chakraData.mantra || "N/A" %></p>

      <h3>Yoga Poses</h3>
      <ul>
        <% chakraData.yogaPoses?.forEach(pose => { %>
          <li><%= pose %></li>
        <% }) %>
      </ul>

      <h3>Affirmations</h3>
      <ul>
        <% chakraData.affirmations?.forEach(aff => { %>
          <li><%= aff %></li>
        <% }) %>
      </ul>

      <h3>Journal Prompts</h3>
      <ol>
        <% chakraData.journalPrompts?.forEach(prompt => { %>
          <li><%= prompt %></li>
        <% }) %>
      </ol>
    </section>

    <!-- archetype Section -->
    <section id="archetype-section">
      <h2><%= archetypeData.title || "Archetype Insights" %></h2>
      <p><%= archetypeData.description || archetypeData.overview || "No description available." %></p>

      <h3>Core Characteristics</h3>
      <ul>
        <% archetypeData.coreCharacteristics?.forEach(char => { %>
          <li><%= char %></li>
        <% }) %>
      </ul>

      <h3>The Persona (Light Side)</h3>
      <p><%= archetypeData.persona || "No persona description available." %></p>

      <h3>The Shadow</h3>
      <ul>
        <% archetypeData.shadow?.forEach(sh => { %>
          <li><%= sh %></li>
        <% }) %>
      </ul>

      <h3>Growth Invitations / Resolutions</h3>
      <ul>
        <% archetypeData.growthInvitations?.forEach(resolution => { %>
          <li><%= resolution %></li>
        <% }) %>
      </ul>
    </section>
  </main>
</body>
</html>