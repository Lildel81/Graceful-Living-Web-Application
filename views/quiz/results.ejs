<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Graceful Living Results</title>
  <link rel="stylesheet" href="/css/results.css">
</head>
<!--Modified by Terry to prevent crashing with csrf verification-->
<body>
  <header>
    <h1>Your Chakra & Archetype Insights</h1>
  </header>

  <main>
    <% const c = chakraData || {}; const a = archetypeData || {}; %>

    <!-- chakra Section -->
    <section id="chakra-section">
      <h2><%= c.title || "Chakra Insights" %></h2>

      <% (Array.isArray(c.description) ? c.description : (c.description ? [c.description] : [])).forEach(paragraph => { %>
        <p><%= paragraph %></p>
      <% }) %>

      <h3>Bija Mantra</h3>
      <p><%= c.mantra || "N/A" %></p>

      <h3>Yoga Poses</h3>
      <ul>
        <% (c.yogaPoses || []).forEach(pose => { %>
          <li><%= pose %></li>
        <% }) %>
      </ul>

      <h3>Affirmations</h3>
      <ul>
        <% (c.affirmations || []).forEach(aff => { %>
          <li><%= aff %></li>
        <% }) %>
      </ul>

      <h3>Journal Prompts</h3>
      <ol>
        <% (c.journalPrompts || []).forEach(prompt => { %>
          <li><%= prompt %></li>
        <% }) %>
      </ol>
    </section>

    <!-- archetype Section -->
    <section id="archetype-section">
      <h2><%= a.title || "Archetype Insights" %></h2>
      <p><%= a.description || a.overview || "No description available." %></p>

      <h3>Core Characteristics</h3>
      <ul>
        <% (a.coreCharacteristics || []).forEach(char => { %>
          <li><%= char %></li>
        <% }) %>
      </ul>

      <h3>The Persona (Light Side)</h3>
      <p><%= a.persona || "No persona description available." %></p>

      <h3>The Shadow</h3>
      <ul>
        <% (a.shadow || []).forEach(sh => { %>
          <li><%= sh %></li>
        <% }) %>
      </ul>

      <h3>Growth Invitations / Resolutions</h3>
      <ul>
        <% (a.growthInvitations || []).forEach(resolution => { %>
          <li><%= resolution %></li>
        <% }) %>
      </ul>
    </section>
  </main>
</body>
</html>
