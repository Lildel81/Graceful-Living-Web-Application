<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Sign-Up</title>
    <link rel="stylesheet" href="/css/user-login.css">
</head>

<body class="signup-body">
  <main class="signup-page-wrapper">
  <!-- Admin Login Link (top-right corner) -->
  <div class="admin-login">
    <a href="/login">Admin Login</a>
  </div>

  <!-- Sign-Up Card -->
  <div class="signup-page">
    <h1>User Sign-Up</h1>

    <!-- Sign-Up Form -->
    <form id="signup-form" action="/user-signup" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="fullname">Full Name</label>
        <input
          type="text"
          id="fullname"
          name="fullName"
          autocomplete="name"
          required
        />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          autocomplete="email"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          autocomplete="current-password"
          required
        />
      </div>

      <button class="signup_button" type="submit">Sign Up</button>

      <div class="login-link">
        <label>Already have an account? <a href="/user-login">Login</a></label>
      </div>
    </form>

    <!-- Messages -->
    <div id="msg" role="status" aria-live="polite">
      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>
      <% if (typeof ok !== 'undefined' && ok) { %>
        <p class="success">Saved! You can now proceed.</p>
      <% } %>
    </div>
  </div>
</main>
</body>
</html>