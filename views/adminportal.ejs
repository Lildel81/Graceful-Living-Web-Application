<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GracefulLiving Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Source+Serif+Pro:wght@400;600;700&display=swap" rel="stylesheet">
  
  <!-- css resources page -->
  <link rel="stylesheet" href="/css/adminportal.css">

  <!-- js for resources page -->
  <script src="/js/adminportal.js" defer></script> 

  <!-- chart.js library -->
  <script src="/js/chart.umd.js" defer></script>

  <!-- js for chakra stats -->
  <script src="/js/stats.js" defer></script>

  <style>
    body {
      margin: 0;
      font-family: 'Open Sans', sans-serif; /*using this font general text*/
      min-height: 100vh;
      background: url('/images/pexels-pixabay-358457.jpg') center/cover no-repeat fixed;
    }
    .hero,
    .overview h2,
    .overview-box h3 {
      font-family: 'Playfair Display', serif; /*using this font for the headers*/
    }
    main {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
    .hero {
      color: white;
      text-align: left;
      padding: 50px 50px 20px;
      font-size: 2rem; /*Welcome*/
    }
    .secondary-nav {
      background-color: #dff3f4cc;
      text-align: center;
      padding: 15px 0;
      font-size: 1.2em;
      margin-bottom: 40px; /* Add space below nav */
    }
    .secondary-nav a {
      margin: 0 50px;
      cursor: pointer;
      text-decoration: none;
      color: inherit;
      font-weight: bold;
      transition: color 0.3s;
    }
    .secondary-nav a:hover {
      color: #1d8888;
    }
    .overview {
      background: rgba(230, 243, 248, 0.8);
      margin: 0 auto 120px;
      padding: 40px;
      width: 80%;
      text-align: center;
      border-radius: 0px;
    }
    .overview-container {
      display: flex;
      justify-content: space-around;
      margin-top: 50px;
      margin-bottom: 50px;
    }
    .overview-box {
      background: white;
      padding: 1px;
      width: 30%;
      border-radius: 0px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.211);
    }
    .overview-box h3 {
      margin-bottom: 10px;
      font-weight: 500;
    }
    .content-box {
      padding: 15px;
      height: 150px;
      border-radius: 5px;
      overflow-y: auto;
    }
    .overview h2 {
      font-weight: 500;
    }
    .btn-add{
      display:inline-block; padding:8px 12px; border-radius:8px;
      background:#0b8; color:#fff; text-decoration:none; font-weight:600;
    }
    .btn-add:hover{ background:#097; }
  </style>
</head>
<body>
  
  <div class="hero">
    <b>Welcome <%= userName %>!</b>
  </div>

  <div class="secondary-nav">
    <!-- <a href="/adminportal">Home</a> -->
    <a href="/content-management">Content Management</a>
    <a href="/adminportal/session">Session Management</a>
    <!--<a href="/clientmanagement/add">Add Client</a>-->
    <a href="/clientmanagement">Client Management</a>
  </div>

  <!-- Statistics Dashboard -->
  <main class="dashboard">

    <!-- Stats Cards -->
    <section class="stats-cards">
      <div class="card">
        Total Submissions:
        <%= typeof totalSubmissions !== 'undefined' ? totalSubmissions : 0 %>
      </div>
      <div class="card">
        Avg. Chakra Balance:
        <%= typeof avgChakraBalance !== 'undefined' ? avgChakraBalance : 0 %>
      </div>
      <div class="card">
        Avg. Quadrant Balance:
        <%= typeof avgQuadrantBalance !== 'undefined' ? avgQuadrantBalance : 0 %>
      </div>
      <div class="card">
        Most Imbalanced:
        <%= typeof mostImbalanced !== 'undefined' ? mostImbalanced : 'N/A' %>
      </div>
    </section>

    <!-- Charts -->
    <section class="charts">
      <div class="chart">Average Chakra Scores</div>
      <div class="chart">Score Distribution</div>
    </section>
  </main>

  <!-- Chakra Assessment Statistics Section -->
  <section class="stats-dashboard-section">
    <div class="stats-dashboard-header">
      <h2>ðŸ“Š Chakra Assessment Statistics</h2>

      <div class="stats-controls">
        <div class="month-filter">
          <label for="statsMonthPicker" class="filter-label">Month</label>
          <input type="month" id="statsMonthPicker" class="month-input" />
          <button id="clearMonthBtn" class="btn-secondary" type="button">All time</button>
          <button id="refreshStatsBtn" class="refresh-btn" type="button">
            <span class="refresh-text">Refresh Data</span>
          </button>
        </div>

        <div class="filter-status">
          <span id="filterLabel" class="badge badge-muted">All time</span>
          <span id="submissionCountBadge" class="badge badge-strong">0 submissions</span>
        </div>
      </div>
    </div>
    
    <div id="statsLoadingMessage" class="loading-message">
      Loading fresh statistics...
    </div>

    <div id="statsContent">
      <!-- Charts Grid -->
      <div class="stats-charts-grid">
        <!-- Chakra Radar Chart -->
        <div class="stats-chart-container large">
          <h3>Chakra Balance Overview</h3>
          <canvas id="chakraRadarChart"></canvas>
        </div>

        <!-- Life Quadrants Bar Chart -->
        <div class="stats-chart-container large">
          <h3>Life Quadrants Analysis</h3>
          <canvas id="lifeQuadrantsChart"></canvas>
        </div>

        <!-- Archetype Distribution -->
        <div class="stats-chart-container medium">
          <h3>Archetype Distribution</h3>
          <canvas id="archetypeChart"></canvas>
        </div>

        <!-- Focus Chakra Distribution -->
        <div class="stats-chart-container medium">
          <h3>Focus Chakra Distribution</h3>
          <canvas id="focusChakraChart"></canvas>
        </div>

        <!-- Age Distribution -->
        <div class="stats-chart-container medium">
          <h3>Age Distribution</h3>
          <canvas id="ageBracketChart"></canvas>
        </div>

        <!-- Top Challenges -->
        <div class="stats-chart-container medium">
          <h3>Top Challenges</h3>
          <canvas id="challengesChart"></canvas>
        </div>

        <!-- Experience with practitioners -->
        <div class="stats-chart-container medium">
          <h3>Worked with Practitioner Before?</h3>
          <canvas id="experienceChart"></canvas>
        </div>

        <!-- Familiarity with modalities -->
        <div class="stats-chart-container medium">
          <h3>Familiar With the Following Techniques</h3>
          <canvas id="familiarityChart"></canvas>
        </div>

        <!-- Healthcare Worker -->
        <div class="stats-chart-container medium">
          <h3>Healthcare Workers</h3>
          <canvas id="healthcareChart"></canvas>
        </div>
      </div>

      <!-- Data Tables -->
      <div class="stats-tables">
        <div class="stats-table-wrapper">
          <h3>Chakra Averages</h3>
          <table class="stats-data-table">
            <thead>
              <tr>
                <th>Chakra</th>
                <th>Average Score</th>
                <th>Mode Score</th>
              </tr>
            </thead>
            <tbody id="chakraTableBody">
              <tr><td colspan="3">Loading...</td></tr>
            </tbody>
          </table>
        </div>

        <div class="stats-table-wrapper">
          <h3>Life Quadrant Averages</h3>
          <table class="stats-data-table">
            <thead>
              <tr>
                <th>Life Quadrant</th>
                <th>Average Score</th>
                <th>Mode Score</th>
              </tr>
            </thead>
            <tbody id="quadrantTableBody">
              <tr><td colspan="3">Loading...</td></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

 
