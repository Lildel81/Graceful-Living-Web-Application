<link rel="stylesheet" href="/css/shop.css" />

<div class="gl-shop">
  <h1 class="gl-shop-title">Checkout</h1>
  <p>
    Subtotal:
    $<%= ( (cart && cart.subtotalCents ? cart.subtotalCents : 0) / 100 ).toFixed(2) %>
  </p>

  <form method="POST" action="/shop/create-checkout-session" class="gl-form">
    <input
      type="hidden"
      name="_csrf"
      value="<%= (typeof csrfToken !== 'undefined' && csrfToken) ? csrfToken : '' %>"
    />

    <input
      type="hidden"
      name="amountCents"
      value="<%= (cart && cart.subtotalCents) ? cart.subtotalCents : 0 %>"
    />

    <label for="email">Email</label>
    <input id="email" type="email" name="email" required size="40" />
    <style>
      input[type="email"] {
        width: 17%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

    <button type="submit" class="gl-btn">Pay with Stripe</button>
  </form>
</div>



