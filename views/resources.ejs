    -->

    <h1><%= resourcesText ? resourcesText.title : "Resources" %></h1>

    <div class="intro_paragraph">
    <% if (resourcesText && resourcesText.paragraphs) { %>
        <% resourcesText.paragraphs.forEach(function(p) { %>
        <p><%= p %></p>
        <% }) %>
    <% } %>
    </div>
   
    
    <h1>Three Steps of Transformation</h1>

    <!-- HARD CODED YT VIDEO
    <div class="video_wrapper">
        <div class="youtube_video">
            <iframe 
                width="560"
                height="315"
                src="https://www.youtube.com/embed/LKa0ABbkGrQ"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
        </div>
    </div> 
    -->

    <% if (resourcesText && resourcesText.videoUrl) { %>
    <div class="video_wrapper">
        <div class="youtube_video">
            <iframe 
                width="560" 
                height="315" 
                src="<%= resourcesText.videoUrl %>" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
        </div>
    </div>
    <% } %>

 

    <!-- Dynamic Resources Images -->
    <div class="downloads_container">
    <div class="downloads_wrapper">
        <% resources.forEach(resource => { %>
        <div class="image-item">
            <img src="<%= resource.imageUrl %>" alt="Resource Image" class="image">

            <% if (resource.overlayText) { %>
            <div class="text-overlay"><%= resource.overlayText %></div>
            <% } %>

            <% if (resource.buttonText && resource.buttonUrl) { %>
            <a href="<%= resource.buttonUrl %>" target="_blank">
                <button class="image-button"><%= resource.buttonText %></button>
            </a>
            <% } %>
        </div>
        <% }) %>
    </div>
</div>

</body>
</html>
