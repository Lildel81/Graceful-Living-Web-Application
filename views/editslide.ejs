<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Slide</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Source+Serif+Pro:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/carousel-mangement.css">
</head>
<body>

  <h2>Edit Slide</h2>

  <!-- Edit Slide Form -->
  <form action="/adminportal/carousel/<%= slide._id %>/update" method="POST" enctype="multipart/form-data">
    <!-- CSRF TOKEN-->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="form-section">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" value="<%= slide.title %>" required>

      <label for="description">Description:</label>
      <textarea name="description" id="description" rows="3"><%= slide.description %></textarea>

      <label for="buttonText">Button Text:</label>
      <input type="text" name="buttonText" id="buttonText" value="<%= slide.buttonText %>" required>

      <label for="buttonUrl">Button URL:</label>
      <input type="text" name="buttonUrl" id="buttonUrl" value="<%= slide.buttonUrl %>" required>
    </div>

    <div class="form-section">
      <label>Choose Image Source:</label>
      <div class="image-options">
        <label><input type="radio" name="imageOption" value="keep" id="keepOption" checked> Keep Current Image</label>
        <label><input type="radio" name="imageOption" value="upload" id="uploadOption"> Upload New Image</label>
        <label><input type="radio" name="imageOption" value="url" id="urlOption"> From URL</label>
      </div>

      <div>
        <label for="imageUpload">Upload Image:</label>
        <input type="file" name="imageUpload" id="imageUpload">
      </div>

      <div>
        <label for="imageUrl">Image URL:</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<%= slide.imageUrl %>" placeholder="Or paste image URL here">
      </div>

      <div>
        <label>Current Image:</label>
        <img src="<%= slide.imageUrl %>" alt="Current Image" class="slide-img" style="width: 200px; height: auto; border: 1px solid #ccc; padding: 5px; border-radius: 4px; margin-top: 10px;">
      </div>
    </div>

    <button type="submit">Update Slide</button>
    <a href="/adminportal/carouselmanagement"><button type="button">Cancel</button></a>
  </form>

  <script src="/js/editslide.js"></script>
</body>
</html>
