<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chakra Forecast</title>
  <link rel="stylesheet" href="/css/chakra-forecast.css">
</head>
<body>

  <!-- MAPPING FOR CHAKRA NAMES-->
   <% 
    const chakraLabels = {
      rootChakra: "Root Chakra",
      sacralChakra: "Sacral Chakra",
      solarPlexusChakra: "Solar Plexus Chakra",
      heartChakra: "Heart Chakra",
      throatChakra: "Throat Chakra",
      thirdEyeChakra: "Third Eye Chakra",
      crownChakra: "Crown Chakra"
    };
  %>

  <div class="chakra-dashboard">
    <h1>ðŸ”® Chakra Forecast</h1>
    <p class="subtitle">AI-powered insights from your recent chakra assessments</p>

    <% if (errorMessage) { %>
      <div class="error"><%= errorMessage %></div>
    <% } else { %>
      <div class="cards-container">
        <div class="card highlight">
          <h3>âœ¨ Predicted Focus Chakra</h3>
          <h2><%= chakraLabels[predicted] || "No data" %></h2>
        </div>

        <% for (const [chakra, count] of Object.entries(counts || {})) { %>
          <div class="card">
            <h4><%= chakraLabels[chakra] || chakra %></h4>
            <p><%= count %> projected next month</p>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</body>
</html>
