<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Resources Management</title>
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/carousel-mangement.css">
</head>
<body>

  <!-- text management section -->
  <h2>Edit Resources Page Text</h2>
  <form action="/adminportal/resources/text/update" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-section">
      <label for="title">Page Title:</label>
      <input type="text" id="title" name="title" value="<%= resourcesText ? resourcesText.title : '' %>">

      <h3>Paragraphs:</h3>
      <div id="paragraphs-container">
        <% if (resourcesText && resourcesText.paragraphs && resourcesText.paragraphs.length > 0) { %>
          <% resourcesText.paragraphs.forEach(function(p) { %>
            <textarea name="paragraphs[]" rows="3"><%= p %></textarea>
          <% }) %>
        <% } else { %>
          <textarea name="paragraphs[]" rows="3"></textarea>
        <% } %>
      </div>

      <button type="button" onclick="addParagraph()">Add Paragraph</button>

      <label for="videoUrl">YouTube Video URL:</label>
      <input 
        type="text" 
        id="videoUrl" 
        name="videoUrl" 
        value="<%= resourcesText ? resourcesText.videoUrl : '' %>">

    </div>

    <button type="submit">Save Text</button>
  </form>

  <script>
    function addParagraph() {
      const container = document.getElementById('paragraphs-container');
      const textarea = document.createElement('textarea');
      textarea.name = "paragraphs[]";
      textarea.rows = 3;
      container.appendChild(textarea);
    }
  </script>




  <!-- image management section -->
  <h2>Manage Resources Images</h2>

    <!-- error message -->
    <% if (typeof error !== 'undefined' && error === 'max') { %>
        <p style="color: red; font-weight: bold;">
        ‚ùå You can only upload up to 3 resource images. Please delete one before adding another.
        </p>
    <% } %>

  <!-- upload new image -->
  <form action="/adminportal/resources/create" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-section">
      <label for="overlayText">Overlay Text:</label>
      <input type="text" name="overlayText" id="overlayText" placeholder="Text on top of image">

      <label for="buttonText">Button Text:</label>
      <input type="text" name="buttonText" id="buttonText" placeholder="Download, View, etc.">

      <label for="buttonUrl">Button URL:</label>
      <input type="text" name="buttonUrl" id="buttonUrl" placeholder="https://example.com/file.pdf">
    </div>

    <div class="form-section">
      <label>Choose Image Source:</label>
      <label><input type="radio" name="imageOption" value="upload" checked> Upload Image</label>
      <label><input type="radio" name="imageOption" value="url"> From URL</label>

      <div>
        <label for="imageUpload">Upload Image:</label>
        <input type="file" name="imageUpload" id="imageUpload">
      </div>

      <div>
        <label for="imageUrl">Image URL:</label>
        <input type="text" name="imageUrl" id="imageUrl" placeholder="Or paste image URL here">
      </div>
    </div>

    <button type="submit">Add Image</button>
  </form>

  <!-- display existing images -->
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Overlay Text</th>
        <th>Button Text</th>
        <th>Button URL</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% resources.forEach(resource => { %>
        <tr>
          <td><img src="<%= resource.imageUrl %>" class="slide-img" alt="Resource Image"></td>
          <td><%= resource.overlayText || "‚Äî" %></td>
          <td><%= resource.buttonText || "‚Äî" %></td>
          <td>
            <% if (resource.buttonUrl) { %>
              <a href="<%= resource.buttonUrl %>" target="_blank"><%= resource.buttonUrl %></a>
            <% } else { %>
              ‚Äî
            <% } %>
          </td>
          <td>
            <form action="/adminportal/resources/<%= resource._id %>/edit" method="GET" style="display:inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit">üñäÔ∏è Edit</button>
            </form>
            <form action="/adminportal/resources/<%= resource._id %>/delete" method="POST" style="display:inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" onclick="return confirm('Delete this image?')">üóëÔ∏è Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
