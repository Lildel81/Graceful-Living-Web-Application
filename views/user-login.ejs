<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Login</title>
  <script src="/js/login.js" defer></script>
  <link rel="stylesheet" href="/css/user-login.css" />
</head>

<body class="login-body">
  <main class="login-page-wrapper">
  <!-- Admin Login Link (top-right corner) -->
  <div class="admin-login">
    <a href="/adminportal">Admin Login</a>
  </div>

  <!-- Login Card -->
  <div class="login-page">
    <h1>User Login</h1>

    <!-- Login Form -->
    <form id="login-form" action="/user-login" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          autocomplete="email"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          autocomplete="current-password"
          required
        />
      </div>

      <button class="login_button" type="submit">Log in</button>

      <div class="signup-link">
        <label>Don't have an account? <a href="/user-signup">Sign up</a></label>
      </div>
    </form>

    <!-- Messages -->
    <div id="msg" role="status" aria-live="polite">
      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>
      <% if (typeof ok !== 'undefined' && ok) { %>
        <p class="success">Saved! You can now proceed.</p>
      <% } %>
    </div>
  </div>
</main>
</body>
</html>
